{% extends 'admin.html.twig' %}

{% block main %}
<div class="panel-header panel-header-sm">
    <p class="navbar-brand" style="color: whitesmoke" >Page</p>
</div>
<div style="background-color: mintcream;">
    <table class="table">
        <tbody style="background-color: mintcream;">
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ page.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ page.slug }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ page.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('page_index') }}" class="navbar-brand">Back to list</a>

    <a href="{{ path('page_edit', {'id': page.id}) }}" class="navbar-brand">Edit</a>

    {{ include('page/_delete_form.html.twig') }}
</div>
{% endblock %}
