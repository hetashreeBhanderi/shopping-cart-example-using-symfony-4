			{% if cate.parent.name == 'Books' %}
				<li class="mb-3">
					<a style="margin-left: 20px;" href="{{ path('category',{'slug':cate.name}) }}">{{ cate.detailName }}</a>
				</li>
			{% endif %}
		{% endif %}
	{% endfor %}
{% endblock %}

{% block footercategorylinks %}
