{% extends 'admin.html.twig' %}

{% block main %}
    <div class="panel-header panel-header-sm">
        <p class="navbar-brand" style="color: whitesmoke">Category</p>
    </div>
<div style="background-color: mintcream;">

    <table class="table">
        <tbody style="background-color: mintcream;">
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Detail Name</th>
                <td>{{ category.detailName }}</td>
            </tr>
            <tr>
                <th>Parent Category</th>
                <td>{% if category.parent is not null %}
                        {{ category.detailName }}
                    {% else %}
                        Main Category
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}"  class="navbar-brand">Back to list</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}" class="navbar-brand">Edit</a>

    {{ include('category/_delete_form.html.twig') }}

</div>
{% endblock %}
