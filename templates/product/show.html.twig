{% extends 'admin.html.twig' %}

{% block main %}
<div class="panel-header panel-header-sm">
    <p class="navbar-brand" style="color: whitesmoke" >Product</p>
</div>
<div style="background-color: mintcream;">
    <table class="table">
        <tbody style="background-color: mintcream;">
            <tr>
                <th> Product </th>
                <td>
                    <img src="{{ asset('images/uploads/' ~ product.productImage) | imagine_filter('squared_thumbnail_small') }}">
                </td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Availavle Quantity</th>
                <td>{{ product.availavleQty }}</td>
            </tr>
            <tr>
                <th>Maximum Quantity Per User</th>
                <td>{{ product.maxQtyPerUserPerCart }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Product Category</th>
                <td>
                    {% if product.category is not null %}
                        {{ product.category.detailName }}
                    {% else %}
                        Main Category
                    {% endif %}
                </td>
            </tr>
            {% if product.brand is not null %}
            <tr>
                <th>Brand</th>
                <td>{{ product.brand.name }}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>

    <a href="{{ path('product_index') }}" class="navbar-brand">Back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}" class="navbar-brand">Edit</a>

    {{ include('product/_delete_form.html.twig') }}
</div>
{% endblock %}
